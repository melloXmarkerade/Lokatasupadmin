<table class="table">
    <thead>
        <tr>
            <th>IDNumber</th>
            <th>Username</th>
            <th>Password</th>
            <th>Email</th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in items)
        {
            <tr>
                <td>@item.TCTNum</td>
                <td>@item.VehicleDescription</td>
                <td>@item.PlateNum</td>
                <td>@item.Name</td>
                <td><button @onclick="@(() => Edit(item))">View Accounts</button></td>

            </tr>
        }
    </tbody>
</table>
